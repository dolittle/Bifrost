{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Bifrost/*.csproj",
            "Bifrost.Client/*.csproj",
            "Bifrost.Content/*.csproj",
            "Bifrost.FluentValidation/*.csproj",
            "Bifrost.Web/*.csproj"
          ],
          "src": "../"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml" ],
        "cwd": "obj"
      },
      {
        "files": "CHANGELOG.md",
        "src": "../../"
      },
      {
        "files": "CODE_OF_CONDUCT.md",
        "src": "../../"
      },
      {
        "files": "LICENSE",
        "src": "../../"
      },
      {
        "files": [
          "api/*.md",
          "Articles/**.{md,yml}",
          "Tutorials/**.{md,yml}",
          "Backend/**.{md,yml}",
          "Frontend/**.{md,yml}",
          "Extending/**.{md,yml}",
          "*.{md,yml}"
        ],
        "src": "../../Documentation"
      }
    ],
    "resource": [
      {
        "files": [
          "**/*.{jpg,png}"
        ],
        "src": "../../Documentation/"
      }
    ],
    "overwrite": [
      {
        "files": [ "apispec/*.md" ],
        "src": "../../Documentation/"
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_gitContribute": {
        "repo": "https://github.com/dolittle/bifrost",
        "branch": "master"
      },
      "_appFooter": "Copyright &#169; 2008-2017 Dolittle"
    },
    "template": [
      "default",
      "../../Documentation/Template/"
    ]
  }
}